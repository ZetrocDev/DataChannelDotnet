<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net9.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<Title>DataChannelDotnet.Bindings: raw libdatachannel C API bindings for C#</Title>
		<Authors>ZetrocDev</Authors>
		<Description>Provides native libdatachannel C API bindings generated by ClangSharp (64 bit Windows/Linux/Mac only)</Description>
		<RepositoryUrl>https://github.com/ZetrocDev/DataChannelDotnet</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<PlatformTarget>x64</PlatformTarget>
		<Prefer32Bit>false</Prefer32Bit>
		<Version>0.23.1</Version>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageReadmeFile>README.md</PackageReadmeFile>
	</PropertyGroup>

	<ItemGroup>
		<None Include="../../README.md" Pack="true" PackagePath="\"/>
		<None Include="Libs/Win64/datachannel.dll" Pack="true" PackagePath="runtimes/win-x64/native">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
			<TargetPath>datachannel.dll</TargetPath>
		</None>
		<None Include="Libs/Linux64/datachannel.so" Pack="true" PackagePath="runtimes/linux-x64/native">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
			<TargetPath>datachannel.so</TargetPath>
		</None>
		<None Include="Libs/Mac64/datachannel.dylib" Pack="true" PackagePath="runtimes/osx-x64/native">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
			<TargetPath>datachannel.dylib</TargetPath>
		</None>
	</ItemGroup>

</Project>
