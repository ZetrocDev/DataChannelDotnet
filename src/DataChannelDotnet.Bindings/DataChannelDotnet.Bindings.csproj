<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net9.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<Title>DataChannelDotnet.Bindings: raw libdatachannel C API bindings for C#</Title>
		<Authors>ZetrocDev</Authors>
		<Description>Provides native libdatachannel C API bindings generated by ClangSharp (Supports: win-x64, win-x86, linux-x64, osx-x64) </Description>
		<RepositoryUrl>https://github.com/ZetrocDev/DataChannelDotnet</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<Version>0.23.1.2</Version>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageReadmeFile>README.md</PackageReadmeFile>
	</PropertyGroup>

	<ItemGroup>
		<None Include="../../README.md" Pack="true" PackagePath="\"/>
	</ItemGroup>

	<ItemGroup>
		<None Include="runtimes/win-x64/native/datachannel.dll" Pack="true" PackagePath="runtimes/win-x64/native">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>

		<None Include="runtimes/win-x64/native/libcrypto-3-x64.dll" Pack="true" PackagePath="runtimes/win-x64/native">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>

		<None Include="runtimes/win-x64/native/libssl-3-x64.dll" Pack="true" PackagePath="runtimes/win-x64/native">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>

		<None Include="runtimes/win-x86/native/datachannel.dll" Pack="true" PackagePath="runtimes/win-x86/native">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>

		<None Include="runtimes/win-x86/native/libcrypto-3.dll" Pack="true" PackagePath="runtimes/win-x86/native">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>

		<None Include="runtimes/win-x86/native/libssl-3.dll" Pack="true" PackagePath="runtimes/win-x86/native">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>

		<None Include="runtimes/linux-x64/native/datachannel.so" Pack="true" PackagePath="runtimes/linux-x64/native">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>

		<None Include="runtimes/osx-x64/native/datachannel.dylib" Pack="true" PackagePath="runtimes/osx-x64/native">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
	</ItemGroup>
</Project>
